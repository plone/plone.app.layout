<ul id="portal-siteactions"
    tal:condition="view/site_actions"
    i18n:domain="plone"
>

  <li tal:repeat="saction view/site_actions"
      tal:attributes="
        id string:siteaction-${saction/id};
      "
  ><a href=""
       tal:define="
         title saction/title;
         id saction/id;
       "
       tal:content="title"
       tal:attributes="
         href saction/url;
         target saction/link_target|nothing;
         title title;
       "
       i18n:attributes="title"
       i18n:translate=""
    >Site action</a></li>
</ul>
